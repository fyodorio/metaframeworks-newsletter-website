---
import { getCollection } from 'astro:content';
import Search from 'astro-pagefind/components/Search';

import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import IssueCard from '../../components/IssueCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import SubscriptionForm from '../../components/SubscriptionForm.astro';

const issues = (await getCollection('archive'))
  .filter((item) => item.data.published)
  .sort((a, b) => {
    if (b.data.pubDate && a.data.pubDate) {
      return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
    } else {
      return 0;
    }
  });
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Archive - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
  </head>

  <body data-pagefind-ignore>
    <Header />
    <main>
      <h1>Archive</h1>

      <section>
        <Search
          id="search"
          className="pagefind-ui"
          uiOptions={{ showImages: false }}
        />
      </section>

      <section id="archive-list">
        <ul>
          {
            issues.map((issue) => (
              <IssueCard
                title={issue.data.title}
                pubDate={issue.data.pubDate}
                description={issue.data.description}
                id={issue.id}
                tags={issue.data.tags}
                titleTag="h4"
              />
            ))
          }
        </ul>
      </section>

      <section class="want-more">
        <h5>Want more? Subscribe to get new issues right into your inbox!</h5>
        <SubscriptionForm />
      </section>
    </main>
    <Footer />

    <script>
      // Hide archive section when search has input
      const archiveList = document.getElementById('archive-list');

      // Wait for Pagefind to load and create the search input
      const observer = new MutationObserver(() => {
        const searchInput = document.querySelector(
          '.pagefind-ui__search-input'
        );
        const searchContainer = document.querySelector('.pagefind-ui');

        if (searchInput && searchContainer && archiveList) {
          observer.disconnect();

          const toggleArchive = () => {
            const hasSearchQuery = searchInput.value.trim().length > 0;
            archiveList.style.display = hasSearchQuery ? 'none' : 'block';
          };

          searchInput.addEventListener('input', toggleArchive);

          // Watch for the Clear button within the search container
          const buttonObserver = new MutationObserver(() => {
            const clearButton = document.querySelector(
              '.pagefind-ui__search-clear'
            );
            if (clearButton && !clearButton.dataset.listenerAdded) {
              clearButton.dataset.listenerAdded = 'true';
              clearButton.addEventListener('click', () => {
                setTimeout(toggleArchive, 50);
              });
            }
          });

          buttonObserver.observe(searchContainer, {
            childList: true,
            subtree: true
          });

          toggleArchive();
        }
      });

      // Start observing the document for changes
      observer.observe(document.body, { childList: true, subtree: true });
    </script>
  </body>
</html>

<style>
  section {
    margin-top: 32px;
  }
  .want-more {
    margin-top: 56px;
  }
  h5 {
    font-size: 1.25rem;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  /* Style Pagefind search input to match the subscription input */
  :global(.pagefind-ui__search-input) {
    border: 2px solid black !important;
    border-radius: 0 !important;
  }
  :global(.pagefind-ui__search-input:focus) {
    outline: none;
  }

  /* To avoid width jumps on search */
  @media (min-width: 720px) {
    main {
      width: 720px;
    }
  }
</style>
